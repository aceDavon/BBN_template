{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "services/*": ["services/*"],
      "scripts/*": ["scripts/*"]
    }
  },
  "include": ["src/**/*", "scripts/**/*", "index.ts"],
  "exclude": ["node_modules", "build"]
}
